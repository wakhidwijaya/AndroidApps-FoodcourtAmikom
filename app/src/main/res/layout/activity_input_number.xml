<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#b0bec5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.customer.table.number.InputNumberActivity">

    <TextView
        android:id="@+id/tv_activity_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vertical_margin_onehundred_eighty"
        android:background="@drawable/background_bottom_radius"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:text="@string/foodcourt_amikom"
        android:textColor="@color/colorIconsText"
        android:textSize="35dp"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="100dp"
        android:paddingTop="150dp">
        <EditText
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shapeemail"
            android:fontFamily="@font/quicksand_regular"
            android:gravity="left"
            android:hint="@string/et_nomor"
            android:inputType="number"/>
        <Button
            android:id="@+id/btn_addnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/shapebutton"
            android:padding="15dp"
            android:text="@string/btn_number"
            android:textColor="#e2f1f8"/>
    </LinearLayout>
</LinearLayout>